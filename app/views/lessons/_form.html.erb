<%= simple_form_for([@course, @lesson]) do |f| %>
  <%= f.error_notification %>

  <div class="col-sm-8">
    <div class="form-group">
      <%= f.input :title, input_html: {class:'form-control'} %>
    </div>
    <div class="form-group">
      <%= f.input :body, class:'summernote' %>
    </div>

    <div class="form-group">
      <%= f.button :submit, class:'btn btn-default' %>
    </div>
  </div>

<% end %>
